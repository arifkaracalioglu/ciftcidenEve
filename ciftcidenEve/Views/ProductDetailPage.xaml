<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ciftcidenEve.Views.ProductDetailPage"
              xmlns:vm="clr-namespace:ciftcidenEve.ViewModels">

    <ContentPage.BindingContext>
        <vm:ProductDetailViewModel />
    </ContentPage.BindingContext>
    
    <StackLayout  Spacing="20" Padding="15">
        <Label FontSize="Medium" />
        <Label x:Name="mTextTitle" Text="{Binding Text}" FontSize="Small"/>

        <Label Text="Fiyat:" FontSize="Medium" />
        <Label x:Name="mTextPrice" Text="{Binding Price}" FontSize="Small"/>


        <Label Text="Kategori:" FontSize="Medium" />
        <Label Text="{Binding Tag}" FontSize="Small"/>
        
        <!--<Label Text="Açıklama:" FontSize="Medium" />
        <Label Text="{Binding Description}" FontSize="Small"/>-->
        
     
    </StackLayout>

</ContentPage>